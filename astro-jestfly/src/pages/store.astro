---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Store - JESTFLY">
  <div class="container py-16">
    <h1 class="text-4xl font-bold mb-8">Store</h1>
    <p class="text-muted-foreground mb-8">
      Shop for music, merchandise, and digital products from your favorite artists.
    </p>
    <div class="rounded-lg border bg-card p-8 text-center">
      <p class="text-muted-foreground">
        Product catalog will be server-rendered with interactive cart features as React islands.
      </p>
    </div>
  </div>
</MainLayout>
