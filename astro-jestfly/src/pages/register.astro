---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Register - JESTFLY" hideHeader={true}>
  <div class="container flex min-h-screen flex-col items-center justify-center">
    <div class="mx-auto flex w-full flex-col justify-center space-y-6 sm:w-[350px]">
      <div class="flex flex-col space-y-2 text-center">
        <h1 class="text-2xl font-semibold tracking-tight">Create an account</h1>
        <p class="text-sm text-muted-foreground">
          Enter your information to get started
        </p>
      </div>

      <div class="text-center text-sm text-muted-foreground">
        Registration functionality will be implemented with React islands
      </div>

      <p class="px-8 text-center text-sm text-muted-foreground">
        Already have an account?{' '}
        <a href="/login" class="underline underline-offset-4 hover:text-primary">
          Sign in
        </a>
      </p>
    </div>
  </div>
</MainLayout>
